# SmartFix-AI Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secure_secret_key_here_minimum_32_characters
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# PostgreSQL connection string (for production)
DATABASE_URL=postgresql://smartfix_user:your_password@localhost:5432/smartfix_ai

# PostgreSQL credentials (for Docker)
POSTGRES_PASSWORD=your_secure_postgres_password

# =============================================================================
# CACHE SETTINGS
# =============================================================================
# Redis connection string
REDIS_URL=redis://localhost:6379

# =============================================================================
# AI SERVICE API KEYS
# =============================================================================
# HuggingFace API Key - Get from https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Google Gemini API Key - Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# SerpAPI Key - Get from https://serpapi.com/
SERPAPI_KEY=your_serpapi_key_here

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Twilio Configuration - Get from https://www.twilio.com/
TWILIO_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_PHONE=your_twilio_phone_number_here
TWILIO_TO_PHONE=your_destination_phone_number_here

# =============================================================================
# OFFLINE MODE SETTINGS
# =============================================================================
OFFLINE_MODE_ENABLED=true
OFFLINE_MODELS_PATH=./models

# =============================================================================
# RETRY SETTINGS
# =============================================================================
MAX_RETRIES=3
RETRY_DELAY=1.0

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
# Sentry DSN for error tracking - Get from https://sentry.io/
SENTRY_DSN=your_sentry_dsn_here

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# CORS SETTINGS
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# =============================================================================
# AWS S3 BACKUP (OPTIONAL)
# =============================================================================
# AWS credentials for S3 backup storage
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=us-east-1

# =============================================================================
# AZURE STORAGE BACKUP (OPTIONAL)
# =============================================================================
# Azure credentials for blob storage backup
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
AZURE_STORAGE_CONTAINER=your_container_name

# =============================================================================
# EMAIL SETTINGS (OPTIONAL)
# =============================================================================
# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# FRONTEND SETTINGS
# =============================================================================
REACT_APP_API_URL=http://localhost:8000/api/v1
REACT_APP_ENVIRONMENT=production

# =============================================================================
# DEVELOPMENT SETTINGS (for local development only)
# =============================================================================
# Uncomment and modify these for local development
# ENVIRONMENT=development
# DEBUG=true
# LOG_LEVEL=DEBUG
# DATABASE_URL=sqlite:///./smartfix_ai.db
# REDIS_URL=redis://localhost:6379
